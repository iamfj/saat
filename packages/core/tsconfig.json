{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@vercel/style-guide/typescript",
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "types": ["vitest/importMeta"],
    "lib": ["es2023"],
    "target": "es2022",
    "moduleResolution": "node"
  },
  "include": ["**/*.ts", "*.ts", "vite.config.mts"],
  "exclude": ["node_modules", "dist", "vitest/**/*"]
}
